@using Microsoft.AspNetCore.Identity
@inject SignInManager<Account> signInMangaer

<header class="header-section">
    <div class="top-nav">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <ul class="tn-left">
                        <li><i class="fa fa-phone"></i> (12) 345 67890</li>
                        <li><i class="fa fa-envelope"></i> info.colorlib@gmail.com</li>
                    </ul>
                </div>
                <div class="col-lg-6">
                    <div class="tn-right">                        
                        
                        @*if the user iss signed-indexer display Logout link*@
                        @if (signInMangaer.IsSignedIn(User))
                        {
                            <div style="display:flex;align-items:center;">
                                <a href="#" class="bk-btn">Booking Now</a>
                                <span style="margin-left: 10px; margin-right:10px; vertical-align:middle">Hi,@User?.Identity?.Name</span>
                                <form style:"display:inline-block" asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="bk-btn" style="border:none;">Logout</button>
                                </form>
                            </div>
                        }
                        @if(!signInMangaer.IsSignedIn(User))
                        {
                            <a href="#" class="bk-btn">Booking Now</a>
                            <form style="display:inline-block;" asp-action="Auth" asp-controller="Account" method="get">
                                <button type="submit" class="bk-btn" style="border:none">Login</button>
                            </form>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-item">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo">
                        <a asp-action="Index" asp-controller="Home">
                            <img src="~/TemplateLayout/MainWebPage/img/logo.png" alt="">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="nav-menu">
                        <nav class="mainmenu">
                            <ul>
                                <li class="active"><a asp-action="Index" asp-controller="Home">Home</a></li>
                                <li><a asp-controller ="Home" asp-action="index">Rooms</a></li>
                                <li><a asp-action="AboutPage" asp-controller="Home">About Us</a></li>
                                <li>
                                    <a href="./pages.html">Pages</a>
                                    <ul class="dropdown">
                                        <li><a href="./room-details.html">Room Details</a></li>
                                        <li><a href="./blog-details.html">Blog Details</a></li>
                                        <li><a href="#">Family Room</a></li>
                                        <li><a href="#">Premium Room</a></li>
                                    </ul>
                                </li>
                                <li><a asp-action="BlankPage" asp-controller="Home">News</a></li>
                                <li><a asp-action="BlankPage" asp-controller="Home">Contact</a></li>
                            </ul>
                        </nav>
                        <div class="nav-right search-switch">
                            <i class="icon_search"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>